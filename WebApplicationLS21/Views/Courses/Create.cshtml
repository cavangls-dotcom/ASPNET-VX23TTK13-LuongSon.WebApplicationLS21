@model WebApplicationLS21.Models.Course

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo khóa học mới</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Title -->
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Image -->
            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Upload nội dung khóa học -->
            <div class="form-group mb-3">
                <label class="control-label">Nội dung khóa học (PDF, DOCX, ZIP...)</label>
                <input type="file" name="contentFile" class="form-control" />
            </div>

            <!-- DurationHours -->
            <div class="form-group mb-3">
                <label asp-for="DurationHours" class="control-label"></label>
                <input asp-for="DurationHours" class="form-control" type="number" />
                <span asp-validation-for="DurationHours" class="text-danger"></span>
            </div>

            <!-- Instructor dropdown -->
            <div class="form-group mb-3">
                <label asp-for="InstructorID" class="control-label"></label>
                <select asp-for="InstructorID" class="form-control" asp-items="ViewBag.InstructorID">
                    <option value="">-- Chọn giảng viên --</option>
                </select>
                <span asp-validation-for="InstructorID" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Tạo khóa học</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">← Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
